@model PetStore.Models.Product

@{
    ViewData["Title"] = "Edit Product: " + Model.ProductName;
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="admin-card-header">
                <h5 class="mb-0">Edit Product: @Model.ProductName</h5>
            </div>
            <div class="admin-card-body">
                <form method="post" action="/Admin/EditProduct/@Model.ProductID">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="ProductID" value="@Model.ProductID" />
                    <input type="hidden" name="CreatedAt" value="@Model.CreatedAt" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Product Name *</label>
                            <input type="text" name="ProductName" value="@Model.ProductName" class="form-control" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Breed *</label>
                            <input type="text" name="Breed" value="@Model.Breed" class="form-control" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Category *</label>
                            <select name="CategoryID" class="form-select" required>
                                @if (ViewBag.Categories != null)
                                {
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        @if (category.CategoryID == Model.CategoryID)
                                        {
                                            <option value="@category.CategoryID" selected>@category.CategoryName</option>
                                        }
                                        else
                                        {
                                            <option value="@category.CategoryID">@category.CategoryName</option>
                                        }
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Gender *</label>
                            <select name="Gender" class="form-select" required>
                                @if (Model.Gender == "Male")
                                {
                                    <option value="Male" selected>Male</option>
                                    <option value="Female">Female</option>
                                }
                                else
                                {
                                    <option value="Male">Male</option>
                                    <option value="Female" selected>Female</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Price ($) *</label>
                            <input type="number" name="Price" value="@Model.Price" step="0.01" min="0" class="form-control" required />
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Stock Quantity *</label>
                            <input type="number" name="StockQuantity" value="@Model.StockQuantity" min="0" class="form-control" required />
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Age (Months) *</label>
                            <input type="number" name="AgeInMonths" value="@Model.AgeInMonths" min="0" class="form-control" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Color *</label>
                            <input type="text" name="Color" value="@Model.Color" class="form-control" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Weight (kg) *</label>
                            <input type="number" name="WeightInKg" value="@Model.WeightInKg" step="0.01" min="0" class="form-control" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Image URL *</label>
                        <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" required />
                        <small class="text-muted">Enter the full URL of the product image</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description *</label>
                        <textarea name="Description" class="form-control" rows="3" required>@Model.Description</textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Health Information *</label>
                        <textarea name="HealthInfo" class="form-control" rows="2" required>@Model.HealthInfo</textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Admin/Products" class="btn btn-secondary">
                            ← Back to Products
                        </a>
                        <button type="submit" class="btn btn-admin-primary">
                            ✓ Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
