@model PetStore.Models.Category

@{
    ViewData["Title"] = "Edit Category: " + Model.CategoryName;
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card">
            <div class="admin-card-header">
                <h5 class="mb-0">Edit Category: @Model.CategoryName</h5>
            </div>
            <div class="admin-card-body">
                <form method="post" action="/Admin/EditCategory/@Model.CategoryID">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />

                    <div class="mb-3">
                        <label class="form-label">Category Name *</label>
                        <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control" 
                               placeholder="e.g., Dogs, Cats, Birds" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description *</label>
                        <textarea name="Description" class="form-control" rows="3" 
                                  placeholder="Describe this category..." required>@Model.Description</textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Admin/Categories" class="btn btn-secondary">
                            ← Back to Categories
                        </a>
                        <button type="submit" class="btn btn-admin-primary">
                            ✓ Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
