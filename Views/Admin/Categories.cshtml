@model IEnumerable<PetStore.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
    Layout = "_AdminLayout";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="admin-card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Product Categories</h5>
                <a href="@Url.Action("CreateCategory")" class="btn btn-success">
                    ‚ûï Add New Category
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var category in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="admin-card-body">
                        <h5 class="card-title">@category.CategoryName</h5>
                        <p class="card-text text-muted">@category.Description</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("EditCategory", new { id = category.CategoryID })" 
                               class="btn btn-sm btn-outline-primary">
                                ‚úèÔ∏è Edit
                            </a>
                            <form method="post" asp-action="DeleteCategory" asp-route-id="@category.CategoryID" 
                                  style="display: inline;"
                                  onsubmit="return confirm('Are you sure you want to delete @category.CategoryName? This will fail if there are products in this category.');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    üóëÔ∏è Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card">
                <div class="admin-card-body text-center py-5">
                    <p class="text-muted">No categories found.</p>
                    <a href="@Url.Action("CreateCategory")" class="btn btn-success">
                        ‚ûï Add Your First Category
                    </a>
                </div>
            </div>
        </div>
    }
</div>
