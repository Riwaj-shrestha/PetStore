@model PetStore.Models.Product

@{
    ViewData["Title"] = "Add New Product";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="admin-card-header">
                <h5 class="mb-0">Product Information</h5>
            </div>
            <div class="admin-card-body">
                <form method="post" asp-controller="Admin" asp-action="CreateProduct">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProductName" class="form-label">Product Name *</label>
                            <input asp-for="ProductName" class="form-control" required />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Breed" class="form-label">Breed *</label>
                            <input asp-for="Breed" class="form-control" required />
                            <span asp-validation-for="Breed" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryID" class="form-label">Category *</label>
                            <select asp-for="CategoryID" class="form-select" required>
                                <option value="">-- Select Category --</option>
                                @if (ViewBag.Categories != null)
                                {
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        <option value="@category.CategoryID">@category.CategoryName</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Gender" class="form-label">Gender *</label>
                            <select asp-for="Gender" class="form-select" required>
                                <option value="">-- Select Gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Price" class="form-label">Price ($) *</label>
                            <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="StockQuantity" class="form-label">Stock Quantity *</label>
                            <input asp-for="StockQuantity" type="number" min="0" class="form-control" required />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="AgeInMonths" class="form-label">Age (Months) *</label>
                            <input asp-for="AgeInMonths" type="number" min="0" class="form-control" required />
                            <span asp-validation-for="AgeInMonths" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Color" class="form-label">Color *</label>
                            <input asp-for="Color" class="form-control" required />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="WeightInKg" class="form-label">Weight (kg) *</label>
                            <input asp-for="WeightInKg" type="number" step="0.01" min="0" class="form-control" required />
                            <span asp-validation-for="WeightInKg" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Image URL *</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" required />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <small class="text-muted">Enter the full URL of the product image</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description *</label>
                        <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HealthInfo" class="form-label">Health Information *</label>
                        <textarea asp-for="HealthInfo" class="form-control" rows="2" required></textarea>
                        <span asp-validation-for="HealthInfo" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Products", "Admin")" class="btn btn-secondary">
                            ← Cancel
                        </a>
                        <button type="submit" class="btn btn-admin-primary">
                            ✓ Create Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
