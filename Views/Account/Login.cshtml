@model PetStore.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewBag.ReturnUrl as string;
}
<link rel="stylesheet" href="~/css/login.css" />

<div class="auth-page">
    <!-- Banner -->
    <section class="auth-hero">
        <h1 class="auth-title">Welcome Back</h1>
        <p class="auth-subtitle">
            Log in to continue finding your perfect companion.
        </p>
    </section>

    <!-- card -->
    <div class="auth-card-wrapper">
        <div class="auth-card">
            <h2 class="auth-card-title text-center mb-3">Login to PetStore</h2>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label auth-label"></label>
                    <input asp-for="Username" class="form-control auth-input" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label auth-label"></label>
                    <input asp-for="Password" class="form-control auth-input" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn auth-btn w-100 mt-2">
                    Login
                </button>

                <p class="mt-3 text-center auth-switch-text">
                    Don't have an account?
                    <a asp-controller="Account" asp-action="Register" class="auth-link">
                        Register
                    </a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
