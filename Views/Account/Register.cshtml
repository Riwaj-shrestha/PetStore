@model PetStore.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/login.css" />

<div class="auth-page">
    <!-- Banner -->
    <section class="auth-hero">
        <h1 class="auth-title">Join PetStore</h1>
        <p class="auth-subtitle">
            Create an account to meet adorable, healthy pets from trusted breeders.
        </p>
    </section>

    <!-- card -->
    <div class="auth-card-wrapper">
        <div class="auth-card">
            <h2 class="auth-card-title text-center mb-3">Create an Account</h2>

            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label auth-label"></label>
                    <input asp-for="Username" class="form-control auth-input" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label auth-label"></label>
                    <input asp-for="Email" class="form-control auth-input" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label auth-label"></label>
                    <input asp-for="Password" class="form-control auth-input" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label auth-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control auth-input" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn auth-btn w-100 mt-2">
                    Register
                </button>

                <p class="mt-3 text-center auth-switch-text">
                    Already have an account?
                    <a asp-controller="Account" asp-action="Login" class="auth-link">
                        Login
                    </a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
