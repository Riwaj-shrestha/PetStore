@model PetStore.Models.ViewModels.ProfilePageViewModel
@{
    ViewData["Title"] = "My Profile";

    // Logic to extract initials for the Avatar
    string initials = "U";
    if (!string.IsNullOrEmpty(Model.UserProfile.FullName))
    {
        var parts = Model.UserProfile.FullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
        {
            initials = $"{parts[0][0]}{parts[parts.Length - 1][0]}".ToUpper();
        }
        else if (parts.Length == 1)
        {
            initials = parts[0].Substring(0, Math.Min(2, parts[0].Length)).ToUpper();
        }
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
}

<div class="container py-5">
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        </div>
    }

    <div class="row g-4">
        
        <div class="col-lg-4">
            <div class="card profile-header-card shadow-md border-0 text-center p-5 h-100">
                <div class="avatar-wrapper mb-4">
                    <div class="avatar-circle">
                        @initials
                    </div>
                </div>
                <h2 class="fw-bold text-dark mb-1">@Model.UserProfile.FullName</h2>
                <p class="text-muted mb-4">@@@Model.UserProfile.Username</p>
                
                <hr class="my-4 opacity-10">
                
                <div class="d-flex justify-content-center gap-3 text-secondary">
                    <div class="text-center">
                        <i class="bi bi-shield-check fs-4 text-success"></i>
                        <div class="small mt-1">Verified</div>
                    </div>
                    <div class="vr"></div>
                    <div class="text-center">
                        <i class="bi bi-person-badge fs-4 text-primary"></i>
                        <div class="small mt-1">Customer</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            
            <div class="card form-card shadow-sm mb-4">
                <div class="card-body p-4 p-md-5">
                    <h3 class="fw-bold section-title">Personal Information</h3>
                    
                    <form method="post" asp-action="UpdateProfile">
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="UserProfile.Username" class="form-label text-muted fw-bold small text-uppercase">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-at"></i></span>
                                    <input asp-for="UserProfile.Username" class="form-control bg-light" disabled />
                                </div>
                                <input type="hidden" asp-for="UserProfile.Username" />
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="UserProfile.FullName" class="form-label text-muted fw-bold small text-uppercase">Full Name</label>
                                <input asp-for="UserProfile.FullName" class="form-control" placeholder="John Doe" />
                                <span asp-validation-for="UserProfile.FullName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UserProfile.Email" class="form-label text-muted fw-bold small text-uppercase">Email Address</label>
                            <input asp-for="UserProfile.Email" class="form-control" placeholder="name@example.com" />
                            <span asp-validation-for="UserProfile.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UserProfile.PhoneNumber" class="form-label text-muted fw-bold small text-uppercase">Phone Number</label>
                            <input asp-for="UserProfile.PhoneNumber" class="form-control" placeholder="(555) 123-4567" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-save">
                                <i class="bi bi-check2-circle me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card form-card shadow-sm">
                <div class="card-body p-4 p-md-5">
                    <h3 class="fw-bold section-title">Security Settings</h3>
                    
                    <form method="post" asp-action="ChangePassword">
                        <div class="mb-3">
                            <label asp-for="ChangePassword.CurrentPassword" class="form-label text-muted fw-bold small text-uppercase">Current Password</label>
                            <input asp-for="ChangePassword.CurrentPassword" class="form-control" type="password" />
                            <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="ChangePassword.NewPassword" class="form-label text-muted fw-bold small text-uppercase">New Password</label>
                                <input asp-for="ChangePassword.NewPassword" class="form-control" type="password" />
                                <span asp-validation-for="ChangePassword.NewPassword" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ChangePassword.ConfirmPassword" class="form-label text-muted fw-bold small text-uppercase">Confirm Password</label>
                                <input asp-for="ChangePassword.ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-password">
                                <i class="bi bi-shield-lock me-2"></i>Update Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}