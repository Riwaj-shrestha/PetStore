@{
    ViewData["Title"] = "About Us";

    // Team Data Configuration
    var teamMembers = new List<string>
    {
        "Aswathy Chandran Kala",
         "Sitong Liu",
        "Swedha Pankajakshan",
       "Gunpreet Singh",
        "Riwaj Shrestha",
        "Himanshu"
    };

    // Helper function to get initials
    string GetInitials(string fullName)
    {
        if (string.IsNullOrEmpty(fullName)) return "";
        var parts = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0].Substring(0, 1).ToUpper();
        return $"{parts[0][0]}{parts[parts.Length - 1][0]}".ToUpper();
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
}

<div class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">About PetStore</h1>
            <p class="hero-subtitle">A trusted place where pets find loving homes and families find pure joy.</p>
        </div>
    </div>

<section class="py-5 bg-white">
    <div class="container py-4">
        <div class="row align-items-center g-5">

            <div class="col-lg-6">
                <div class="position-relative">
                    <img src="https://images.unsplash.com/photo-1537151641189-e685b67326c5?q=80&w=1738&auto=format&fit=crop"
                         class="img-fluid rounded-4 shadow-lg" 
                         alt="Happy dog" />
                    <div style="position: absolute; bottom: -20px; right: -20px; width: 100px; height: 100px; background: var(--gradient-primary); border-radius: 50%; z-index: -1; opacity: 0.5;"></div>
                </div>
            </div>

            <div class="col-lg-6">
                <h2 class="fw-bold mb-4 section-title ms-0 text-start">Who We Are</h2>
                <p class="text-muted mb-3 fs-5">
                    PetStore was founded with a simple purpose: to connect caring
                    families with healthy pets in a responsible, ethical, and joyful way.
                </p>
                <p class="text-muted mb-5">
                    With trusted breeders, local shelters, and expert veterinarians,
                    we ensure every pet gets the love, nutrition, and care they deserve before meeting you.
                </p>

                <div class="row g-3">
                    <div class="col-4">
                        <div class="stat-box text-center">
                            <h3 class="fw-bold" style="color: var(--primary-orange)">10+</h3>
                            <p class="text-muted small mb-0 fw-bold text-uppercase">Years</p>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stat-box text-center">
                            <h3 class="fw-bold" style="color: var(--primary-orange)">5k+</h3>
                            <p class="text-muted small mb-0 fw-bold text-uppercase">Families</p>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stat-box text-center">
                            <h3 class="fw-bold" style="color: var(--primary-orange)">100%</h3>
                            <p class="text-muted small mb-0 fw-bold text-uppercase">Support</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<section class="py-5" style="background: #f8f9fa;">
    <div class="container py-4">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Our Mission & Vision</h2>
            <p class="text-muted mt-2">We believe that pets are family.</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card feature-card p-4 text-center">
                    <div class="mb-3">
                        <div class="rounded-1 d-flex justify-content-center align-items-center bg-danger bg-opacity-10 p-3 rounded-circle d-inline-block">
                             <i class="bi bi-heart-fill fs-1 text-danger "></i>
                        </div>
                    </div>
                    <h5 class="fw-bold mb-3">Mission</h5>
                    <p class="text-muted">
                        To promote responsible pet care and make it easier for families
                        to welcome a happy, healthy pet into their home.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card p-4 text-center">
                    <div class="mb-3">
                    <div class="rounded-1 d-flex justify-content-center align-items-center bg-warning bg-opacity-10 p-3 rounded-circle d-inline-block">
                     <i class="bi bi-star-fill fs-1 text-warning "></i>
                    </div>
                       
                    </div>
                    <h5 class="fw-bold mb-3">Vision</h5>
                    <p class="text-muted">
                        To become Canada’s most trusted and loved pet adoption and pet
                        care marketplace.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card p-4 text-center">
                    <div class="mb-3">
                        <div class="rounded-1 d-flex justify-content-center align-items-center bg-primary bg-opacity-10 p-3 rounded-circle d-inline-block">
                             <i class="bi bi-people-fill fs-1 text-primary "></i>
                        </div>
                       
                    </div>
                    <h5 class="fw-bold mb-3">Values</h5>
                    <p class="text-muted">
                        Compassion, transparency, community support, and a lifelong
                        commitment to pet care.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-white">
    <div class="container py-4">
        <div class="text-center mb-5">
            <h2 class="fw-bold section-title">Meet Our Team</h2>
            <p class="text-muted mt-3">The passionate people behind PetStore.</p>
        </div>

        <div class="row g-4 justify-content-center">
            @foreach (var member in teamMembers)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card feature-card p-4 text-center h-100">
                        <div class="team-avatar-wrapper">
                            <div class="team-avatar-circle">
                                @GetInitials(member)
                            </div>
                        </div>
                        <h5 class="fw-bold text-dark mb-1">@member</h5>
                        <p class="text-muted small text-uppercase fw-bold mb-0" style="color: var(--primary-orange)">Team Member</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>