@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Section -->
<section class="py-5" style="background: linear-gradient(to right, #f8fafc, #eef2ff);">
    <div class="container text-center">
        <h1 class="fw-bold display-5 mb-3">About PetStore</h1>
        <p class="text-muted fs-5">
            A trusted place where pets find loving homes and families find joy.
        </p>
    </div>
</section>

<!-- Who We Are -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center g-5">

            <div class="col-md-6">
                <img src="https://images.unsplash.com/photo-1537151641189-e685b67326c5?q=80&w=1738&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                     class="img-fluid rounded-4 shadow-sm" />
            </div>

            <div class="col-md-6">
                <h2 class="fw-bold mb-3">Who We Are</h2>
                <p class="text-muted mb-3">
                    PetStore was founded with a simple purpose, to connect caring
                    families with healthy pets in a responsible, ethical, and joyful way.
                </p>
                <p class="text-muted mb-3">
                    With trusted breeders, local shelters, and expert veterinarians,
                    we ensure every pet gets the love, nutrition, and care they deserve.
                </p>

                <div class="d-flex gap-3 mt-4">
                    <div class="text-center">
                        <h3 class="fw-bold text-primary">10+</h3>
                        <p class="text-muted small">Years of Service</p>
                    </div>
                    <div class="text-center">
                        <h3 class="fw-bold text-primary">5000+</h3>
                        <p class="text-muted small">Happy Families</p>
                    </div>
                    <div class="text-center">
                        <h3 class="fw-bold text-primary">100%</h3>
                        <p class="text-muted small">Care & Support</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Mission & Vision -->
<section class="py-5" style="background: #f9fafb;">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Our Mission & Vision</h2>
        <p class="text-muted mb-5 fs-5">
            We believe that pets are family — and every family deserves a joyful, healthy companion.
        </p>

        <div class="row g-4">

            <div class="col-md-4">
                <div class="p-4 rounded-4 shadow-sm h-100 bg-white">
                    <i class="bi bi-heart-fill text-danger fs-1 mb-3"></i>
                    <h5 class="fw-semibold">Mission</h5>
                    <p class="text-muted">
                        To promote responsible pet care and make it easier for families
                        to welcome a happy, healthy pet into their home.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 rounded-4 shadow-sm h-100 bg-white">
                    <i class="bi bi-star-fill text-warning fs-1 mb-3"></i>
                    <h5 class="fw-semibold">Vision</h5>
                    <p class="text-muted">
                        To become Canada’s most trusted and loved pet adoption and pet
                        care marketplace.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 rounded-4 shadow-sm h-100 bg-white">
                    <i class="bi bi-people-fill text-primary fs-1 mb-3"></i>
                    <h5 class="fw-semibold">Values</h5>
                    <p class="text-muted">
                        Compassion, transparency, community support, and a lifelong
                        commitment to pet care.
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Team Section -->
<section class="py-5">
    <div class="container">
        <h2 class="fw-bold text-center mb-5">Meet Our Team</h2>

        <div class="row g-4">

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <img src="https://randomuser.me/api/portraits/women/44.jpg"
                         class="rounded-circle mb-3" width="110" height="110">
                    <h5 class="fw-bold">Sarah Thompson</h5>
                    <p class="text-muted small">Founder & CEO</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <img src="https://randomuser.me/api/portraits/men/32.jpg"
                         class="rounded-circle mb-3" width="110" height="110">
                    <h5 class="fw-bold">Michael Carter</h5>
                    <p class="text-muted small">Veterinary Specialist</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <img src="https://randomuser.me/api/portraits/women/65.jpg"
                         class="rounded-circle mb-3" width="110" height="110">
                    <h5 class="fw-bold">Emma Williams</h5>
                    <p class="text-muted small">Pet Adoption Manager</p>
                </div>
            </div>

        </div>
    </div>
</section>
