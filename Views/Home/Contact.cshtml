@model PetStore.Models.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

@section Styles {
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
    
    <style>
        /* Page-Specific Overrides to match Theme */
        .contact-icon-box {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: var(--off-white);
            color: var(--primary-orange);
            font-size: 1.25rem;
            transition: all 0.3s ease;
        }

        .contact-item:hover .contact-icon-box {
            background: var(--gradient-primary);
            color: white;
            transform: scale(1.1);
        }

        .form-control {
            border: 2px solid var(--medium-gray);
            padding: 12px;
            border-radius: var(--radius-sm);
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--primary-orange);
            box-shadow: 0 0 0 4px rgba(255, 140, 66, 0.1);
        }

        .btn-send {
            background: var(--gradient-primary);
            color: white;
            border: none;
            padding: 12px;
            border-radius: var(--radius-sm);
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-send:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-primary);
            color: white;
        }

        .social-btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: var(--off-white);
            color: var(--text-light);
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .social-btn:hover {
            background: var(--primary-orange);
            color: white;
            transform: translateY(-3px);
        }
    </style>
}

<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Get in Touch</h1>
        <p class="hero-subtitle">We’re here to support you and your pets every step of the way.</p>
    </div>
</div>

<section class="py-5 bg-white">
    <div class="container py-4">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success border-0 shadow-sm mb-5" role="alert">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-circle-fill fs-4 me-3 text-success"></i>
                    <div>
                        <h5 class="alert-heading fw-bold mb-1">Message Sent!</h5>
                        <p class="mb-0">@TempData["SuccessMessage"]</p>
                    </div>
                </div>
            </div>
        }

        <div class="row g-5">

            <div class="col-lg-5">
                <div class="feature-card p-4 p-lg-5 h-100 shadow-lg">
                    <h3 class="fw-bold mb-5 section-title">Contact Information</h3>

                    <div class="d-flex align-items-center mb-4 contact-item">
                        <div class="contact-icon-box shadow-sm me-3">
                            <i class="bi bi-geo-alt-fill"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0 text-dark">Visit Us</h6>
                            <p class="text-muted mb-0 small">123 Pet Street, Toronto, ON</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-4 contact-item">
                        <div class="contact-icon-box shadow-sm me-3">
                            <i class="bi bi-telephone-fill"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0 text-dark">Call Us</h6>
                            <p class="text-muted mb-0 small">+1 (416) 555-1234</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-5 contact-item">
                        <div class="contact-icon-box shadow-sm me-3">
                            <i class="bi bi-envelope-fill"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0 text-dark">Email Us</h6>
                            <p class="text-muted mb-0 small">support@petstore.com</p>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 mb-4">

                    <h5 class="fw-bold mb-3" style="color: var(--text-dark)">Business Hours</h5>
                    <ul class="list-unstyled text-muted small mb-4">
                        <li class="mb-2 d-flex justify-content-between"><span>Mon – Fri:</span> <span class="fw-semibold">9:00 AM – 7:00 PM</span></li>
                        <li class="mb-2 d-flex justify-content-between"><span>Saturday:</span> <span class="fw-semibold">10:00 AM – 5:00 PM</span></li>
                        <li class="d-flex justify-content-between"><span>Sunday:</span> <span class="text-danger fw-semibold">Closed</span></li>
                    </ul>

                    <h5 class="fw-bold mt-4 mb-3" style="color: var(--text-dark)">Follow Us</h5>
                    <div class="d-flex gap-2">
                        <a href="#" class="social-btn shadow-sm"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="social-btn shadow-sm"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="social-btn shadow-sm"><i class="bi bi-twitter-x"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="card border-0 shadow-lg rounded-4 p-4 p-lg-5 h-100">
                    <h3 class="fw-bold mb-4 section-title">Send Us a Message</h3>

                    <form asp-action="Contact" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-semibold text-muted small text-uppercase">Full Name</label>
                                <input asp-for="Name" class="form-control" placeholder="John Doe">
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold text-muted small text-uppercase">Email Address</label>
                                <input asp-for="Email" class="form-control" placeholder="name@example.com">
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Subject" class="form-label fw-semibold text-muted small text-uppercase">Subject</label>
                                <select asp-for="Subject" class="form-select form-control text-muted">
                                    <option value="">Select a Subject</option>
                                    <option value="General Inquiry">General Inquiry</option>
                                    <option value="Order Support">Order Support</option>
                                    <option value="Adoption Question">Adoption Question</option>
                                </select>
                                <span asp-validation-for="Subject" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Message" class="form-label fw-semibold text-muted small text-uppercase">Message</label>
                                <textarea asp-for="Message" class="form-control" rows="5" placeholder="How can we help you today?"></textarea>
                                <span asp-validation-for="Message" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-send w-100">
                                    <i class="bi bi-send-fill me-2"></i> Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

<section class="pb-5 bg-white">
    <div class="container pb-4">
        <div class="ratio ratio-21x9 rounded-4 shadow-md overflow-hidden border border-2 border-white">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2886.436496734316!2d-79.3870564!3d43.6425662!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x882b34d68bf33a9b%3A0x15edd8c4de1c7581!2sCN%20Tower!5e0!3m2!1sen!2sca!4v1678901234567!5m2!1sen!2sca" 
                style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}