@{
    ViewData["Title"] = "Contact Us";
}

<!-- Hero -->
<section class="py-5" style="background: linear-gradient(to right, #eef2ff, #fef3c7);">
    <div class="container text-center">
        <h1 class="fw-bold display-5 mb-2">Get in Touch</h1>
        <p class="text-muted fs-5">We’re here to support you and your pets.</p>
    </div>
</section>

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <div class="row g-5">

            <!-- Contact Info -->
            <div class="col-md-5">
                <div class="p-4 rounded-4 shadow-sm bg-white h-100">

                    <h3 class="fw-bold mb-4">Contact Information</h3>

                    <p class="mb-3">
                        <i class="bi bi-geo-alt-fill text-danger fs-5"></i>
                        <span class="ms-2 text-muted">123 Pet Street, Toronto, Canada</span>
                    </p>

                    <p class="mb-3">
                        <i class="bi bi-telephone-fill text-primary fs-5"></i>
                        <span class="ms-2 text-muted">+1 (416) 555-1234</span>
                    </p>

                    <p class="mb-4">
                        <i class="bi bi-envelope-fill text-success fs-5"></i>
                        <span class="ms-2 text-muted">support@petstore.com</span>
                    </p>

                    <h5 class="fw-semibold mb-3">Business Hours</h5>
                    <ul class="list-unstyled text-muted">
                        <li>Mon – Fri: 9:00 AM – 7:00 PM</li>
                        <li>Saturday: 10:00 AM – 5:00 PM</li>
                        <li>Sunday: Closed</li>
                    </ul>

                    <!-- Social -->
                    <h5 class="fw-semibold mt-4 mb-3">Follow Us</h5>
                    <div class="d-flex gap-3 fs-3">
                        <i class="bi bi-facebook text-primary"></i>
                        <i class="bi bi-instagram text-danger"></i>
                        <i class="bi bi-twitter text-info"></i>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-md-7">
                <div class="p-4 rounded-4 shadow-sm bg-white">

                    <h3 class="fw-bold mb-4">Send Us a Message</h3>

                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Full Name</label>
                                <input type="text" class="form-control" placeholder="Enter your name">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Email Address</label>
                                <input type="email" class="form-control" placeholder="email@example.com">
                            </div>

                            <div class="col-12">
                                <label class="form-label">Message</label>
                                <textarea class="form-control" rows="5" placeholder="Write your message..."></textarea>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-2 fw-semibold">
                                    Send Message
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</section>

<!-- Map -->
<section class="pb-5">
    <div class="container">
        <div class="ratio ratio-16x9 rounded-4 shadow-sm overflow-hidden">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d46390.34162736401!2d-80.48065075136716!3d43.38964450000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x882b9018e9e89adf%3A0x2043c24369ede07e!2sConestoga%20College%20Kitchener%20-%20Doon%20Campus!5e0!3m2!1sen!2sca!4v1764968786619!5m2!1sen!2sca" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</section>
